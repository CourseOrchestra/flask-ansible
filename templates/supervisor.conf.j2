[program:{{ flaskapp_app_name }}]
command={{ flaskapp_app_directory }}/run_{{ flaskapp_app_name }}.sh
directory={{ flaskapp_app_directory }}

user = {{ flaskapp_app_user }}

process_name=%(program_name)s-%(process_num)s

numprocs=1

startretries=3
autostart=true
autorestart=true
stopwaitsecs = 60
redirect_stderr = True
environment=FLASK_APP={{ flask_app }}

{#todo rotate logs#}
stdout_logfile = {{ flaskapp_app_log_directory }}/{{ flaskapp_app_name }}.log
stderr_logfile = {{ flaskapp_app_log_directory }}/{{ flaskapp_app_name }}.error.log